@model SearchHotelsViewModel

<div class="row d-flex align-items-end">

    <div class="col-12 col-lg">

        <label for="searchBar" class="col-form-label-lg">Search City</label>
        <input id="searchBar" asp-for="@Model.City" type="text" class="form-control form-control-lg" placeholder="Search">
        <span asp-validation-for="@Model.City" class="text-danger"></span>
    </div>

    <div class="col-12 col-sm-6 col-lg">

        <label asp-for="@Model.CheckInDate" class="col-form-label-lg">Check-in Date</label>
        <input asp-for="@Model.CheckInDate" type="datetime-local" class="form-control form-control-lg" />
        <span asp-validation-for="@Model.CheckInDate" class="text-danger"></span>
    </div>

    <div class="col-12 col-sm-6 col-lg">

        <label asp-for="@Model.CheckOutDate" class="col-form-label-lg">Check-out Date</label>
        <input asp-for="@Model.CheckOutDate" type="datetime-local" class="form-control form-control-lg" />
        <span asp-validation-for="@Model.CheckOutDate" class="text-danger"></span>
    </div>

    <div class="col-12 col-sm-6 col-lg">

        <label asp-for="@Model.AdultsCount" class="col-form-label-lg">Adults Count</label>
        <input asp-for="@Model.AdultsCount" type="number" class="form-control form-control-lg" />
        <span asp-validation-for="@Model.AdultsCount" class="text-danger"></span>
    </div>

    <div class="col-12 col-sm-6 col-lg">

        <label asp-for="@Model.RoomsCount" class="col-form-label-lg">Rooms Count</label>
        <input asp-for="@Model.RoomsCount" type="number" class="form-control form-control-lg" />
        <span asp-validation-for="@Model.RoomsCount" class="text-danger"></span>
    </div>

    <div class="col-12 col-lg mt-4 mt-lg-0">
        <button class="btn btn-outline-secondary btn-lg w-100" type="submit">Search</button>
    </div>

</div>
