<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotBooking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <partial name="_NavBarPartial" />
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div style="
                position: fixed;
                top: 90%;
                left: 50%;
                z-index: 10000;
                transform: translate(-50%, -50%);
                background: black;
                color: white;
                padding: .5rem 1rem;
                border-radius: 30px;
                outline: 2px solid white;
            ">
            <div class="d-block d-sm-none">Extra Small (xs)</div>
            <div class="d-none d-sm-block d-md-none">Small (sm)</div>
            <div class="d-none d-md-block d-lg-none">Medium (md)</div>
            <div class="d-none d-lg-block d-xl-none">Large (lg)</div>
            <div class="d-none d-xl-block d-xxl-none">X-Large (xl)</div>
            <div class="d-none d-xxl-block">XX-Large (xxl)</div>
        </div>
        <div class="container">
            &copy; @DateTime.Today.Year - HotBooking
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
