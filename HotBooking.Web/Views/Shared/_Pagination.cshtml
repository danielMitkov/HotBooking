@model PagerViewModel

<div class="container-fluid">

    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <button onclick="submitPage(1)" type="submit" class="page-link">
                        First
                    </button>
                </li>
                <li class="page-item">
                    <button onclick="submitPage(@(Model.CurrentPage - 1))" type="submit" class="page-link">
                        Previous
                    </button>
                </li>
            }

            @for (int page = Model.StartPage; page <= Model.EndPage; ++page)
            {
                <li class="page-item @(page == Model.CurrentPage ? "active" : "")">

                    <button onclick="submitPage(@(page))" type="submit" class="page-link">
                        @(page)
                    </button>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <button onclick="submitPage(@(Model.CurrentPage + 1))" type="submit" class="page-link">
                        Next
                    </button>
                </li>
                <li class="page-item">
                    <button onclick="submitPage(@(Model.TotalPages))" type="submit" class="page-link">
                        Last
                    </button>
                </li>
            }
        </ul>
        <input id="pageNumber" name="Page" type="hidden" value="1" />
    }
</div>
<script>
    function submitPage(page) {
        document.getElementById('pageNumber').value = page;
        document.getElementById('mainForm').submit();
    }
</script>
