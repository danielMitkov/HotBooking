@model PagerViewModel

<div class="container-fluid">

    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end mt-3 mb-0">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <button asp-action="@Model.ActionName" asp-route-page="1" type="submit" class="page-link">
                        First
                    </button>
                </li>
                <li class="page-item">
                    <button asp-action="@Model.ActionName" asp-route-page="@(Model.CurrentPage - 1)" type="submit" class="page-link">
                        Previous
                    </button>
                </li>
            }

            @for (int page = Model.StartPage; page <= Model.EndPage; ++page)
            {
                <li class="page-item @(page == Model.CurrentPage ? "active" : "")">

                    <button asp-action="@Model.ActionName" asp-route-page="@(page)" type="submit" class="page-link">
                        @(page)
                    </button>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <button asp-action="@Model.ActionName" asp-route-page="@(Model.CurrentPage + 1)" type="submit" class="page-link">
                        Next
                    </button>
                </li>
                <li class="page-item">
                    <button asp-action="@Model.ActionName" asp-route-page="@(Model.TotalPages)" type="submit" class="page-link">
                        Last
                    </button>
                </li>
            }
        </ul>
    }
</div>
