@using HotBooking.Core.Interfaces
@using HotBooking.Web.Extensions
@inject IManagerService managerService

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">HotBooking</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Hotels" asp-action="List">Hotels</a>
                </li>

                @if ((await managerService.DoesManagerExistAsync(User.GetId())) == true)
                {

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Manage My Hotels</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Become Manager</a>
                    </li>
                }

                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Users" asp-action="Details">Profile Details</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Users" asp-action="Edit">Edit Profile</a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link text-dark"
                       asp-controller="@BookingController.Name"
                       asp-action="@nameof(BookingController.List)">
                        My Bookings
                    </a>
                </li>
            </ul>

            <partial name="_LoginPartial" />
        </div>
    </div>
</nav>
